namespace a:
import ART.art_Sink_txt;

    type T1 : (int x, int y) end
    type T2 : (T1 z, int z2) end
  
    actor b(T2 init) T2 i ==> T2 o, int p:
    
        initialize ==> o:[oo]
        var
            T2 oo
        do
            oo := init;
        end

        loop: action i:[a] ==> o:[oo], p:[oo.z.x]
        var
            T2 oo
        do
          if (a.z.x < 10) then 
            oo := a;
            oo.z.x := oo.z.x + 1;
          else 
            oo := T2(T1(-1, -1), 0); 
          end
        end                
  
        stop: action i:[a] ==> p:[-2]
        guard a.z.y = -1 do
        end

        priority 
          stop > loop;
        end  
    end
    
    network top() ==>:
    entities
        f = b(init = T2(T1(0, 0.0), 1));
        print = art_Sink_txt(fileName = "./output/structTest.txt");
        
    structure
        f.o --> f.i;
        f.p --> print.In;
    end

end
